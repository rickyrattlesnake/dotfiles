[alias]
    #Base Commands
    s = status
    co = checkout
    br = branch -a -vv
    ci = commit

    #Listing
    ls = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate
    ll = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat
    lnc = log --pretty=format:"%h\\ %s\\ [%cn]"
    ld = log --pretty=format:"%C(yellow)%h\\ %ad%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=relative
    lalias = "!git config -l | grep alias | cut -c 7-"
    lf = log -u
    lt = describe --tags --abbrev=0
    tree = log --graph --decorate --pretty=oneline --abbrev-commit
    
    #Working Directory & Staging
    a-c = "!git add -A && git commit"

    #Fetching
    fetchall = fetch --all -p

    #Comparisons
    diff = diff --word-diff
    dd = difftool --dir-diff --no-prompt

    #Reset
    r = reset
    r1 = reset HEAD^
    r2 = reset HEAD^^
    rh = reset --hard
    rh1 = reset HEAD^ --hard
    rh2 = reset HEAD^^ --hard
    
    #Stash
    sh = stash -u
    sh-l = stash list
    sh-a = stash apply
    sh-p = stash pop
    sh-s = stash save
    sh-c = stash clear

    #Remote Server Interactions
    rmt-ls = remote -v

[core]
    autocrlf = input
[push]
    default = simple
[branch]
    autosetuprebase = never
[url "https://"]
    insteadOf = git://
[diff]
    tool = bc
[difftool "bc3"]
    path = C:/Program Files/Beyond Compare 4/bcomp.exe
[difftool "bc"]
    path = C:/Program Files/Beyond Compare 4/bcomp.exe
[merge]
    tool = bc
[mergetool "bc"]
    path = C:/Program Files/Beyond Compare 4/bcomp.exe
